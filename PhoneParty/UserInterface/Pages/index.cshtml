@page
@{
    ViewData["Title"] = "PhoneParty";
    ViewBag.ScriptPath = "startScreen.js";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="flex-grow-1"></div>

<h1 class="zanzegi-font title-color title">Phone Party</h1>
<input class="rounded-text-input-1" type="text" id="userNameInput" placeholder="введи свой ник"/>
<div class="flex-grow-1"></div>

<h3 class="goznak-font text-center">Подключись по коду</h3>
<div class="d-flex justify-content-center gap-3">
    <input class="rounded-text-input-1 lobby-input" oninput="this.value = this.value.replace(/[^A-Fa-f0-9]/g, '')" type="text" id="lobbyIdInput" maxlength="4" placeholder=""/>
    <button class="rounded-button-1" onclick="joinLobby()">войти</button>
</div>


<h3 class="goznak-font text-center">или</h3>

<button class="rounded-button-1" onclick="createLobby()">создай своё лобби</button>
<div id="status"></div>

<div class="d-flex justify-content-center align-items-center gap-3">
    <h3 class="goznak-font">Позови<br>друзей!</h3>
    <img src="img/qr-code.png" class="index-qr-code" alt="qr-code">
</div>
